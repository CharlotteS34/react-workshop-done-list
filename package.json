{
    "name": "done-list",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "eslint 'src/**/*.{ts,tsx}' --cache --fix",
        "prepare": "husky install",
        "format": "prettier --config ./prettier.config.js --write src"
    },
    "dependencies": {
        "@typescript-eslint/eslint-plugin": "^4.29.3",
        "eslint-plugin-prettier": "^3.4.1",
        "next": "11.1.0",
        "react": "17.0.2",
        "react-dom": "17.0.2"
    },
    "devDependencies": {
        "@types/react": "17.0.19",
        "eslint": "7.32.0",
        "eslint-config-next": "11.1.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^7.0.2",
        "lint-staged": "^11.1.2",
        "prettier": "2.3.2",
        "typescript": "4.3.5"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn format",
            "yarn lint"
        ],
        "*.{js,json,md}": [
            "yarn format"
        ]
    }
}
